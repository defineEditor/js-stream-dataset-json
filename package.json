{
    "name": "js-stream-dataset-json",
    "version": "0.6.1",
    "description": "Stream Dataset-JSON files",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "test": "jest",
        "build": "rm -rf dist && tsc",
        "release": "npm run lint && npm run test && npm run build && npm publish",
        "lint": "eslint . --ignore-pattern 'dist'"
    },
    "keywords": [
        "cdisc",
        "dataset-json"
    ],
    "prettier": {
        "tabWidth": 4
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "moduleNameMapper": {
            "^class/(.*)$": "<rootDir>/src/class/$1",
            "^interfaces/(.*)$": "<rootDir>/src/interfaces/$1"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/defineEditor/js-stream-dataset-json.git"
    },
    "author": "Dmitry Kolosov",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.12.0",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "typescript-eslint": "^8.22.0",
        "eslint": "^9.19.0",
        "husky": "^9.1.7",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "js-array-filter": "^0.1.4",
        "JSONStream": "^1.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
